{
	"installCommand": "npm install --legacy-peer-deps",
	"version": 2,
	"builds": [
		{
			"src": "server.js",
			"use": "@vercel/node"
		},
		{
			"src": "src/**/*",
			"use": "@vercel/static"
		}
	],
	"routes": [{ "src": "/(.*)", "dest": "/" }],
	"headers": [
		{
			"source": "/api/(.*)",

			"headers": [
				{
					"key": "Access-Control-Allow-Origin",
					"value": "*"
				},

				{
					"key": "Access-Control-Allow-Methods",
					"value": "*"
				},

				{
					"key": "Access-Control-Allow-Headers",
					"value": "*"
				},

				{ "key": "Access-Control-Allow-Credentials", "value": "true" }
			]
		}
	]
}
